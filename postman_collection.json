{
  "info": {
    "name": "Prueba Técnica – API Usuarios",
    "description": "Colección de pruebas para la API REST de gestión de usuarios (Node.js + Express + PostgreSQL)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "GET / – Estado de la API",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"]
            },
            "description": "Verifica que el servidor esté corriendo correctamente."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "POST /users – Crear usuario (exitoso)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Pérez\",\n  \"email\": \"juan@ejemplo.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Crea un usuario con datos válidos. Espera respuesta 201."
          },
          "response": []
        },
        {
          "name": "POST /users – Segundo usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"María García\",\n  \"email\": \"maria@ejemplo.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Crea un segundo usuario para tener datos al listar. Espera respuesta 201."
          },
          "response": []
        },
        {
          "name": "GET /users – Listar usuarios",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Retorna todos los usuarios registrados. Espera respuesta 200."
          },
          "response": []
        },
        {
          "name": "POST /users – Error: email duplicado (409)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Repetido\",\n  \"email\": \"juan@ejemplo.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Intenta crear un usuario con un email ya registrado. Espera respuesta 409."
          },
          "response": []
        },
        {
          "name": "POST /users – Error: campos faltantes (400)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sin Email\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Envía solo el nombre sin email. Espera respuesta 400."
          },
          "response": []
        },
        {
          "name": "POST /users – Error: email inválido (400)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Carlos Test\",\n  \"email\": \"esto-no-es-un-email\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Envía un formato de email inválido. Espera respuesta 400."
          },
          "response": []
        },
        {
          "name": "POST /users – Error: body vacío (400)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Envía un body vacío sin name ni email. Espera respuesta 400."
          },
          "response": []
        },
        {
          "name": "GET /ruta-inexistente – Error 404",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/ruta-que-no-existe",
              "host": ["{{base_url}}"],
              "path": ["ruta-que-no-existe"]
            },
            "description": "Accede a una ruta no definida. Espera respuesta 404."
          },
          "response": []
        }
      ]
    }
  ]
}
